---
import { clinicConfig, getWhatsAppLink } from '../config/clinic';

const { name, city, address, phone, social, hours, cityInfo, geo } = clinicConfig;

const horarios = hours.display;
const whatsappLink = getWhatsAppLink('Olá, gostaria de agendar uma avaliação');

// Embed do Google Maps específico para cada cidade
const mapsEmbed = `https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3480.7!2d${geo.longitude}!3d${geo.latitude}!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2s${encodeURIComponent(name)}!5e0!3m2!1spt-BR!2sbr`;
---

<section id="contato" class="py-20 lg:py-32 bg-white">
  <div class="section-container">
    <!-- Header -->
    <div class="text-center mb-16 animate-on-scroll">
      <span class="inline-block px-4 py-2 bg-primary-100 rounded-full text-primary-700 text-sm font-medium mb-4">
        Localização
      </span>
      <h2 class="section-title text-gray-900">
        Venha conhecer <span class="gradient-text">nossa unidade</span>
      </h2>
      <p class="section-subtitle mt-4">
        Estamos localizados no coração de {city}, RS. Venha nos visitar!
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 items-start">
      <!-- Map -->
      <div class="animate-on-scroll">
        <div class="rounded-3xl overflow-hidden shadow-2xl h-[400px] lg:h-[500px]">
          <iframe
            src={mapsEmbed}
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title={`Localização ${name}`}
          ></iframe>
        </div>
      </div>

      <!-- Contact Info -->
      <div class="space-y-8 animate-on-scroll">
        <!-- Address Card -->
        <div class="bg-gray-50 rounded-3xl p-8">
          <h3 class="text-xl font-bold text-gray-900 mb-6">Endereço</h3>

          <div class="space-y-6">
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-2xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900">{name}</h4>
                <p class="text-gray-600">
                  {address.street}{address.complement && ` - ${address.complement}`}<br />
                  {address.neighborhood}, {address.city} - {address.state}<br />
                  CEP: {address.zipCode}
                </p>
              </div>
            </div>

            <div class="flex gap-4">
              <div class="w-12 h-12 bg-green-100 rounded-2xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900">WhatsApp</h4>
                <a href={`tel:${phone.raw}`} class="text-gray-600 hover:text-primary-600 transition-colors">
                  {phone.display}
                </a>
              </div>
            </div>

            <div class="flex gap-4">
              <div class="w-12 h-12 bg-blue-100 rounded-2xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900">Instagram</h4>
                <a href={social.instagram.url} target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-primary-600 transition-colors">
                  {social.instagram.handle}
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Hours Card -->
        <div class="bg-gray-50 rounded-3xl p-8">
          <h3 class="text-xl font-bold text-gray-900 mb-6">Horário de Funcionamento</h3>
          <div class="space-y-3">
            {horarios.map((item) => (
              <div class="flex justify-between items-center py-2 border-b border-gray-200 last:border-0">
                <span class="text-gray-700 font-medium">{item.day}</span>
                <span class={`${item.hours === 'Fechado' ? 'text-gray-400' : 'text-primary-600 font-semibold'}`}>
                  {item.hours}
                </span>
              </div>
            ))}
          </div>
        </div>

        <!-- CTA -->
        <a
          href={whatsappLink}
          target="_blank"
          rel="noopener noreferrer"
          class="btn-whatsapp w-full justify-center"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
          </svg>
          Agendar minha avaliação gratuita
        </a>
      </div>
    </div>

    <!-- About the City - CONTEÚDO ÚNICO POR CIDADE -->
    <div class="mt-24 animate-on-scroll">
      <div class="bg-gradient-to-br from-primary-600 to-primary-700 rounded-3xl p-8 lg:p-12 text-white">
        <div class="grid lg:grid-cols-2 gap-8 items-center">
          <div>
            <h3 class="text-2xl lg:text-3xl font-bold mb-4">
              Orgulho de estar em {city}
            </h3>
            <p class="text-white/90 leading-relaxed mb-6">
              {cityInfo.description}
            </p>
            <p class="text-white/90 leading-relaxed">
              Estamos aqui para contribuir com essa tradição, ajudando os moradores de {city}
              e região a alcançarem seus objetivos de saúde e emagrecimento.
            </p>
          </div>
          <div class="grid grid-cols-2 gap-4">
            {cityInfo.keyFacts.map((fact) => (
              <div class="bg-white/10 rounded-2xl p-6 text-center backdrop-blur-sm">
                <div class="text-3xl font-bold">{fact.value}</div>
                <div class="text-sm text-white/80">{fact.label}</div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
