---
import '../styles/global.css';
import CookieConsent from '../components/CookieConsent.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  noindex?: boolean;
}

const {
  title,
  description = 'Emagrecentro Carlos Barbosa - Centro de Emagrecimento e Estética. Método 4 Fases cientificamente comprovado. Perca até 10% do peso em 5 semanas. Maior rede das Américas com mais de 4 milhões de clientes atendidos.',
  image = '/images/og-image.jpeg',
  type = 'website',
  publishedTime,
  modifiedTime,
  author,
  noindex = false,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site);

const structuredData = {
