---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  author: string;
  image?: string;
  imageAlt?: string;
  tags?: string[];
}

const { title, description, pubDate, updatedDate, author, image, imageAlt, tags = [] } = Astro.props;

const formattedPubDate = pubDate.toLocaleDateString('pt-BR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString('pt-BR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Article structured data
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "image": image ? new URL(image, Astro.site).toString() : undefined,
  "datePublished": pubDate.toISOString(),
  "dateModified": updatedDate?.toISOString() || pubDate.toISOString(),
  "author": {
    "@type": "Organization",
    "name": author,
    "url": "https://emagrecentrocarlosbarbosa.com.br"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Emagrecentro Carlos Barbosa",
    "logo": {
      "@type": "ImageObject",
      "url": "https://emagrecentrocarlosbarbosa.com.br/images/logo.png"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": Astro.url.toString()
  }
};
---

<Layout
  title={`${title} | Blog Emagrecentro Carlos Barbosa`}
  description={description}
  image={image}
  type="article"
  publishedTime={pubDate.toISOString()}
  modifiedTime={updatedDate?.toISOString()}
  author={author}
>
  <Header />

  <main class="pt-24 pb-16">
    <article class="section-container">
      <div class="max-w-3xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="mb-8" aria-label="Breadcrumb">
          <ol class="flex items-center gap-2 text-sm text-gray-500">
            <li>
              <a href="/" class="hover:text-primary-600 transition-colors">Início</a>
            </li>
            <li>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </li>
            <li>
              <a href="/blog" class="hover:text-primary-600 transition-colors">Blog</a>
            </li>
            <li>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </li>
            <li class="text-gray-700 truncate max-w-[200px]">{title}</li>
          </ol>
        </nav>

        <!-- Header -->
        <header class="mb-12">
          {tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-4">
              {tags.map((tag) => (
                <span class="px-3 py-1 bg-primary-100 text-primary-700 text-sm font-medium rounded-full">
                  {tag}
                </span>
              ))}
            </div>
          )}

          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6 leading-tight">
            {title}
          </h1>

          <p class="text-xl text-gray-600 mb-6">
            {description}
          </p>

          <div class="flex items-center gap-4 text-sm text-gray-500">
            <div class="flex items-center gap-2">
              <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-primary-600 rounded-full flex items-center justify-center text-white font-bold">
                E
              </div>
              <span>{author}</span>
            </div>
            <span>|</span>
            <time datetime={pubDate.toISOString()}>
              {formattedPubDate}
            </time>
            {updatedDate && (
              <>
                <span>|</span>
                <span>Atualizado em {formattedUpdatedDate}</span>
              </>
            )}
          </div>
        </header>

        <!-- Featured Image -->
        {image && (
          <div class="mb-12 rounded-3xl overflow-hidden shadow-lg">
            <img
              src={image}
              alt={imageAlt || title}
              class="w-full h-auto"
              loading="eager"
            />
          </div>
        )}

        <!-- Content -->
        <div class="prose prose-lg prose-gray max-w-none
          prose-headings:font-display prose-headings:text-gray-900
          prose-h2:text-2xl prose-h2:mt-12 prose-h2:mb-6
          prose-h3:text-xl prose-h3:mt-8 prose-h3:mb-4
          prose-p:text-gray-600 prose-p:leading-relaxed
          prose-a:text-primary-600 prose-a:no-underline hover:prose-a:underline
          prose-strong:text-gray-900
          prose-ul:text-gray-600 prose-ol:text-gray-600
          prose-li:marker:text-primary-500
          prose-blockquote:border-primary-500 prose-blockquote:bg-gray-50 prose-blockquote:py-4 prose-blockquote:px-6 prose-blockquote:rounded-r-xl
          prose-img:rounded-2xl prose-img:shadow-lg
        ">
          <slot />
        </div>

        <!-- Author Box -->
        <div class="mt-16 p-8 bg-gray-50 rounded-3xl">
          <div class="flex flex-col sm:flex-row items-center sm:items-start gap-6">
            <div class="w-20 h-20 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center text-white text-3xl font-bold flex-shrink-0">
              E
            </div>
            <div class="text-center sm:text-left">
              <h3 class="text-lg font-bold text-gray-900 mb-2">Emagrecentro Carlos Barbosa</h3>
              <p class="text-gray-600 mb-4">
                Centro de Emagrecimento e Estética na Serra Gaúcha. Há mais de 38 anos transformando
                vidas com o Método 4 Fases cientificamente comprovado.
              </p>
              <a
                href="https://api.whatsapp.com/send?phone=5554993388577&text=Ol%C3%A1,%20li%20o%20artigo%20do%20blog%20e%20gostaria%20de%20saber%20mais"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-primary-600 font-semibold hover:text-primary-700"
              >
                Fale conosco no WhatsApp
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Share -->
        <div class="mt-12 pt-8 border-t border-gray-200">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Compartilhe este artigo</h3>
          <div class="flex gap-4">
            <a
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.toString())}`}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center text-white hover:bg-blue-700 transition-colors"
              aria-label="Compartilhar no Facebook"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a
              href={`https://api.whatsapp.com/send?text=${encodeURIComponent(title + ' - ' + Astro.url.toString())}`}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center text-white hover:bg-green-600 transition-colors"
              aria-label="Compartilhar no WhatsApp"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
              </svg>
            </a>
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.toString())}`}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 bg-black rounded-full flex items-center justify-center text-white hover:bg-gray-800 transition-colors"
              aria-label="Compartilhar no X (Twitter)"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.toString())}`}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 bg-blue-700 rounded-full flex items-center justify-center text-white hover:bg-blue-800 transition-colors"
              aria-label="Compartilhar no LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Back to blog -->
        <div class="mt-12">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 text-primary-600 font-semibold hover:text-primary-700"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Voltar para o blog
          </a>
        </div>
      </div>
    </article>
  </main>

  <Footer />

  <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
</Layout>
