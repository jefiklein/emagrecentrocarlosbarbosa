---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const posts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

function formatDate(date: Date) {
  return date.toLocaleDateString('pt-BR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<Layout
  title="Blog | Emagrecentro Carlos Barbosa"
  description="Dicas de emagrecimento, nutrição, saúde e bem-estar. Conteúdo exclusivo da Emagrecentro Carlos Barbosa para ajudar você na sua jornada de transformação."
>
  <Header />

  <main class="pt-24 pb-16">
    <div class="section-container">
      <!-- Header -->
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-2 bg-primary-100 rounded-full text-primary-700 text-sm font-medium mb-4">
          Blog
        </span>
        <h1 class="section-title text-gray-900">
          Dicas e <span class="gradient-text">Conhecimento</span>
        </h1>
        <p class="section-subtitle mt-4">
          Conteúdo exclusivo sobre emagrecimento, nutrição, saúde e bem-estar
          para ajudar você na sua jornada de transformação.
        </p>
      </div>

      <!-- Posts Grid -->
      {posts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post, index) => (
            <article class="card overflow-hidden group animate-on-scroll" style={`animation-delay: ${index * 0.1}s`}>
              <!-- Image -->
              <a href={`/blog/${post.slug}`} class="block aspect-video overflow-hidden">
                {post.data.image ? (
                  <img
                    src={post.data.image}
                    alt={post.data.imageAlt || post.data.title}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full bg-gradient-to-br from-primary-500 to-primary-600 flex items-center justify-center">
                    <svg class="w-16 h-16 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                    </svg>
                  </div>
                )}
              </a>

              <!-- Content -->
              <div class="p-6">
                <!-- Tags -->
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-3">
                    {post.data.tags.slice(0, 2).map((tag) => (
                      <span class="px-2 py-1 bg-primary-50 text-primary-600 text-xs font-medium rounded">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}

                <!-- Title -->
                <h2 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2 group-hover:text-primary-600 transition-colors">
                  <a href={`/blog/${post.slug}`}>
                    {post.data.title}
                  </a>
                </h2>

                <!-- Description -->
                <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                  {post.data.description}
                </p>

                <!-- Meta -->
                <div class="flex items-center justify-between text-sm text-gray-500">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {formatDate(post.data.pubDate)}
                  </time>
                  <a
                    href={`/blog/${post.slug}`}
                    class="inline-flex items-center gap-1 text-primary-600 font-medium hover:text-primary-700"
                  >
                    Ler mais
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <p class="text-gray-500">Nenhum artigo publicado ainda. Volte em breve!</p>
        </div>
      )}

      <!-- Newsletter CTA -->
      <div class="mt-20 bg-gradient-to-br from-primary-600 to-primary-700 rounded-3xl p-8 md:p-12 text-center text-white">
        <h2 class="text-2xl md:text-3xl font-bold mb-4">
          Quer receber nossas dicas?
        </h2>
        <p class="text-white/90 mb-6 max-w-xl mx-auto">
          Siga-nos no Instagram e fique por dentro das novidades, dicas de emagrecimento
          e histórias de transformação.
        </p>
        <a
          href="https://www.instagram.com/emagrecentrocarlosbarbosa"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-8 py-4 bg-white text-primary-600 font-semibold rounded-full hover:bg-gray-100 transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
          Seguir no Instagram
        </a>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
